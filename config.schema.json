{
  "pluginAlias": "webos-notification",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "webOS TV",
        "minLength": 1,
        "required": true
      },
      "ip": {
        "title": "TV ip address",
        "type": "string",
        "required": true
      },
      "mac": {
        "title": "TV mac address",
        "type": "string",
        "required": true
      },
      "broadcastAdr": {
        "title": "Broadcast address",
        "type": "string",
        "required": false
      },
      "keyFile": {
        "title": "Key file location",
        "type": "string",
        "required": false
      },
      "prefsDir": {
        "title": "Prefs directory",
        "type": "string",
        "required": false
      },
      "pollingInterval": {
        "title": "Background polling interval in seconds",
        "type": "number",
        "default": 5,
        "required": false
      },
      "notificationButtons": {
        "title": "Notification buttons",
        "type": "array",
        "items": {
          "type": "string"
        },
        "required": false
      }
    }
  }
}
